// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int             @id @default(autoincrement())
  nombre    String
  apellido  String
  DNI       BigInt
  email     String
  password  String
  telefono  BigInt
  edad      Int
  rutinas   Routine[]
  programa  DayAssignment[]
  historial History[]
}

model History {
  id        Int      @id @default(autoincrement())
  User      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int?
  Routine   Routine  @relation(fields: [routineId], references: [id])
  routineId Int
  fecha     DateTime
}

model DayAssignment {
  id        Int     @id @default(autoincrement())
  User      User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int?
  dayIndex  Int
  Routine   Routine @relation(fields: [routineId], references: [id])
  routineId Int
}

model Routine {
  id            Int             @id @default(autoincrement())
  nombre        String
  userId        Int
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercises     Exercise[]
  createdAt     DateTime        @default(now())
  DayAssignment DayAssignment[]
  History       History[]
}

model Exercise {
  id             Int      @id @default(autoincrement())
  titulo         String
  media          String // URL de imagen
  //////////////////// deprecado | se tiene que ir
  info1          String @default("")// "10 x 5"
  info2          String @default("")// "descanso 1 min"
  ///////////////////  nuevo
  series         Int      @default(0)
  repesXserie    Int      @default(0)
  tiempoXserie   Int      @default(10)
  descansoXserie Int      @default(0)
  ///////////////////
  routineId      Int
  routine        Routine  @relation(fields: [routineId], references: [id], onDelete: Cascade)
  orden          Int      @default(0) // Para ordenar ejercicios
  createdAt      DateTime @default(now())
}
